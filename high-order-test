make "sum [
    [term a next b]
    [
        if gt :a :b
            [return 0]
            [return add term :a sum :term next :a :next :b]
    ]
]

make "sum_term [
    [x]
    [return :x]
]

make "sum_next [
    [x]
    [return add :x 1]
]

print sum :sum_term 1 :sum_next 10
print sum [[x] [return add :x :x]] 1 [[x] [return add :x 1]] 10
